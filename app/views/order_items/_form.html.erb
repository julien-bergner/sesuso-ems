<%= simple_form_for @order_item, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :order_id %>
  <%= f.input :product_id %>
  <%= f.input :quantity %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                order_items_path, :class => 'btn' %>
  </div>
<% end %>
