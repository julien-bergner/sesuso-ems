<h3>Welche kulinarischen Köstlichkeiten möchten Sie bestellen?</h3>
<table class="form-inline">
<% @extras.each do |extra| %>
      <tr class="hide_if_no_icon">
        <td><h3>0</h3></td>
        <td><h3>x&nbsp;</h3></td>
        <td>
          <div class="btn-group btn-group-vertical">
            <button type="button" class="btn btn-warning"><i class="icon-plus-sign"></i></button>
            <button type="button" class="btn btn-warning"><i class="icon-minus-sign"></i></button>
          </div>
        </td>
        <td><h3>&nbsp;</h3></td>
        <td><h3><%= "#{extra.caption} (#{extra.get_price} €)" %></h3><%= raw extra.description1 %><%= raw extra.description2 %></td>
      </tr>
      <tr><td></td><td></td><td></td><td></td><td><hr style="color: #289784; background-color: #289784; height: 3px;"></td></tr>

<% end %>
</table>

<%= form_tag url_for(:controller => "order_tickets_workflow", :action => "receive_selected_extras"), :method => "put" %>
<%= hidden_field_tag :selected_amount_of_seats, "" %>


<div class="form-actions">
  <%= link_to("Zurück", url_for(:controller => "order_tickets_workflow", :action => "select_amount_of_seats"), {:class => "btn"}) %>
  <%= submit_tag("Weiter", :class => "btn btn-warning") %>
</div>





