<%= simple_form_for @seat, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :ball_table_id %>
  <%= f.input :order_id %>
  <%= f.input :position %>
  <%= f.input :caption %>
  <%= f.input :price %>
  <%= f.input :seat_status %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                seats_path, :class => 'btn' %>
  </div>
<% end %>
