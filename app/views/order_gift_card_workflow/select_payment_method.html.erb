    per &nbsp; <%= link_to "klassischer Banküberweisung", url_for(:controller => "order_gift_card_workflow", :action => "receive_payment_method", :payment_method => "bank_transfer", :order_id => @order_id), {:class => 'btn btn-warning', :id => "bank-transfer-button"} %></h3>
