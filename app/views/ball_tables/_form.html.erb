<%= simple_form_for @ball_table, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :position %>
  <%= f.input :caption %>
  <%= f.input :type %>
  <%= f.input :description %>
  <%= f.input :price %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                ball_tables_path, :class => 'btn' %>
  </div>
<% end %>
